{
    "name": "nova-eslint",
    "version": "0.3.0",
    "description": "Lint your code files with ESLint in Nova.",
    "scripts": {
        "build": "rollup -c rollup.config.js",
        "lint": "concurrently 'yarn:lint:*'",
        "lint:eslint": "eslint --ignore-path .gitignore \"**/*.{ts,js}\"",
        "lint:prettier": "prettier --ignore-path .gitignore --check \"**/*.{ts,js,json}\"",
        "fix": "concurrently 'yarn:fix:*'",
        "fix:eslint": "eslint --fix --ignore-path .gitignore \"**/*.{ts,js}\"",
        "fix:prettier": "prettier --ignore-path .gitignore --write \"**/*.{ts,js,json,md}\"",
        "watch": "onchange -i \"src/**\" \"rollup.*.js\" -- npm run build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/apexskier/nova-eslint.git"
    },
    "author": "Cameron Little",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/apexskier/nova-eslint/issues"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "@types/eslint": "^7.2.2",
        "@types/nova-editor-node": "^1.0.3",
        "@typescript-eslint/eslint-plugin": "^4.1.1",
        "@typescript-eslint/parser": "^4.1.1",
        "concurrently": "^5.2.0",
        "eslint": "^6.8.0",
        "eslint-plugin-nova": "^1.0.0-beta.3",
        "onchange": "^7.0.2",
        "prettier": "^2.1.2",
        "rollup": "^2.7.2",
        "rollup-plugin-typescript2": "^0.27.2",
        "typescript": "^4.0.2"
    },
    "private": true,
    "dependencies": {}
}
